@model Book


<div class="container">
        <h2 class="mb-3">Inserisci i dettagli del libro</h2>
    <form asp-controller="Home" asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label asp-for=@Model.Name class="form-label">Titolo</label>
            <input asp-for=@Model.Name type="text" class="form-control" required>
            <span asp-validation-for=@Model.Name class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for=@Model.Author class="form-label">Autore</label>
            <input asp-for=@Model.Author type="text" class="form-control" required>
            <span asp-validation-for=@Model.Author class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for=@Model.Description class="form-label">Descrizione</label>
            <textarea asp-for=@Model.Description rows="10" class="form-control"></textarea>
            <span asp-validation-for=@Model.Description class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for=@Model.ImgUrl class="form-label">URL Immagine</label>
            <input asp-for=@Model.ImgUrl type="text" class="form-control" required>
            <span asp-validation-for=@Model.ImgUrl class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for=@Model.IsAvailable class=" form-label">Disponibilità Cartacea</label>
            <input asp-for=@Model.IsAvailable type="text" class="form-control" required>
            <span asp-validation-for=@Model.IsAvailable class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for=@Model.EBook class=" form-label">Disponibilità Digitale</label>
            <input asp-for=@Model.EBook type="text" class="form-control" required>
            <span asp-validation-for=@Model.EBook class="text-danger"></span>
        </div>
   
        <button type="submit" class="btn btn-primary">Salva</button>
    </form>
</div>
